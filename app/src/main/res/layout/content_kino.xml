<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <requestFocus />
    </LinearLayout>-->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/textView_content_title_kino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_content_title_kino_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/ColorPurple2"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView_content_poster_kino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null" />

            <TextView
                android:id="@+id/textView_content_cof_kino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_content_genre_kino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/ColorPurple"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imageView_content_duration_kino"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@null" />

                <TextView
                    android:id="@+id/textView_content_duration_kino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="#333"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_content_producer_kino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_content_cast_kino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_content_date_kino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/ColorRed"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_content_description_kino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#333"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>